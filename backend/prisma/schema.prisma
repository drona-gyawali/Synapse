generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User  {
  id          String    @id @default(uuid())
  username    String    @unique
  email       String    @unique
  password    String  
  setting     Setting?
  contents    Content[]
  links       Link[]
  isVerified  Boolean   @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Content {
  id        String    @id @default(uuid())
  title     String?    
  content   String?
  link      String?
  tags      String?
  type      String?
  isPublic  Boolean?    @default(true)
  user      User?      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Link {
  id      String   @id @default(uuid())
  hash    String   @unique
  user    User?   @relation(fields: [userId], references: [id])
  userId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
} 

model Setting {
  id                    String   @id @default(uuid())
  deactivateAccount     Boolean  @default(false)
  deleteAccount         Boolean  @default(false)
  deactivateLinks       Boolean  @default(false)
  deleteLinks           Boolean  @default(false) 
  language              String   @default("en")
  grantPersonalData     Boolean  @default(true)
  user    User?          @relation(fields: [userId], references: [id])
  userId  String        @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}